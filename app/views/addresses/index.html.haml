
.container.jumbotron
  %h1
    Listing Addresses

  %table.table
    %thead
      %tr
        %th
          Address
        %th{colspan:"3"}

    %tbody
      -@addresses.each do |address|
        %tr
          %td
            = link_to address.address, address

  = link_to 'New Address', new_address_path
